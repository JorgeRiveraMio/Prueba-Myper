@{
    var mensaje = TempData["Success"] ?? TempData["Error"];
    var titulo = TempData["Success"] != null ? "Éxito" : "Error";
    var color = TempData["Success"] != null ? "success" : "danger";
}

@if (mensaje != null)
{
    <div class="modal fade" id="modalMensaje" tabindex="-1" role="dialog" aria-labelledby="modalMensajeLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-@color text-white">
                    <h5 class="modal-title" id="modalMensajeLabel">@titulo</h5>
                    <button type="button" class="close text-white" data-bs-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@mensaje</p>
                </div>
            </div>
        </div>
    </div>
}


    <script>
        window.addEventListener('DOMContentLoaded', () => {
            var mensaje = "@(TempData["Success"] ?? TempData["Error"])";
            if (mensaje && mensaje.trim().length > 0) {
                var modal = new bootstrap.Modal(document.getElementById('modalMensaje'));
                modal.show();
            }
        });
    </script>
